# ==============================================================================
# DJANGO CORE CONFIGURATION
# ==============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=your-secret-key-here-generate-a-new-one

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Environment (development, staging, production)
ENVIRONMENT=development

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Internal IPs for debug toolbar (comma-separated)
INTERNAL_IPS=127.0.0.1,localhost

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# Primary database URL (Railway PostgreSQL or local)
DATABASE_URL=postgresql://username:password@localhost:5432/repairmybike_db

# Database connection settings
CONN_MAX_AGE=600
DB_CONNECT_TIMEOUT=10

# Local PostgreSQL settings (if not using DATABASE_URL)
DB_NAME=repairmybike_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# ==============================================================================
# REDIS CACHE CONFIGURATION
# ==============================================================================

# Redis URL for caching
REDIS_URL=redis://localhost:6379/1

# Redis connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_MAX_CONNECTIONS=50

# Cache settings
CACHE_KEY_PREFIX=repairmybike
CACHE_TIMEOUT=300
CACHE_LOCATION=redis://localhost:6379/1

# ==============================================================================
# CORS CONFIGURATION
# ==============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==============================================================================
# AUTHENTICATION & SECURITY
# ==============================================================================

# Descope Authentication
DESCOPE_PROJECT_ID=your-descope-project-id
DESCOPE_MANAGEMENT_KEY=your-descope-management-key

# Staff API Key
STAFF_API_KEY=your-staff-api-key

# Password validation settings
PASSWORD_MAX_SIMILARITY=0.7
PASSWORD_MIN_LENGTH=8

# ==============================================================================
# PAYMENT GATEWAY
# ==============================================================================

# Razorpay Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_ENABLED=False

# ==============================================================================
# INTERNATIONALIZATION
# ==============================================================================

LANGUAGE_CODE=en-us
TIME_ZONE=Asia/Kolkata
USE_I18N=True
USE_TZ=True

# ==============================================================================
# STATIC & MEDIA FILES
# ==============================================================================

STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# File upload settings (in bytes)
FILE_UPLOAD_MAX_MEMORY_SIZE=2621440
DATA_UPLOAD_MAX_MEMORY_SIZE=2621440

# ==============================================================================
# SECURITY HEADERS & HTTPS
# ==============================================================================

# Security headers
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# HTTPS settings (for production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Session & CSRF settings
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_AGE=1209600
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Lax

# CSRF trusted origins (comma-separated)
CSRF_TRUSTED_ORIGINS=

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================

LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
AUTH_LOG_LEVEL=DEBUG

# ==============================================================================
# WHITENOISE CONFIGURATION
# ==============================================================================

WHITENOISE_USE_FINDERS=True
WHITENOISE_AUTOREFRESH=True

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================

# Set to True in development for better debugging
WHITENOISE_USE_FINDERS=True
WHITENOISE_AUTOREFRESH=True

# ==============================================================================
# PRODUCTION OVERRIDES
# ==============================================================================

# For production, override these settings:
# DEBUG=False
# ENVIRONMENT=production
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# WHITENOISE_USE_FINDERS=False
# WHITENOISE_AUTOREFRESH=False